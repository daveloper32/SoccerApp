<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="false"
    android:layout_margin="7dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="100dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imgV_teamcV_badge"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="@string/imgV_teamcV_badge_cD"
            android:paddingHorizontal="5dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tV_teamcV_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/imgV_teamcV_badge"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/tV_teamcV_name"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tV_teamcV_name_subt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tV_teamcV_name"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/imgV_teamcV_badge"
            android:fontFamily="sans-serif"
            android:text="@string/tV_teamcV_name_subt"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tV_teamcV_stadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tV_teamcV_name_subt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/imgV_teamcV_badge"
            android:fontFamily="sans-serif-black"
            android:text="@string/tV_teamcV_stadium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tV_teamcV_stadium_subt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tV_teamcV_stadium"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/imgV_teamcV_badge"
            android:fontFamily="sans-serif"
            android:text="@string/tV_teamcV_stadium_subt"
            android:textSize="14sp"
            android:textStyle="italic" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>